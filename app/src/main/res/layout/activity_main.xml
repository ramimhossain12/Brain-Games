<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_width="match_parent"
    android:background="#BABBBF">



    <TextView
        android:id="@+id/braingame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brain Game"
        android:textColor="#190402"
        android:layout_marginLeft="33dp"
        android:textSize="30sp"

        />



    <Button
        android:text="New Game"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/NewGame"
        android:layout_below="@+id/Continue"
        android:background="@drawable/brt_shape"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#E91E63"
        android:onClick="newgame" />

    <Button
        android:text="Continue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/Continue"
        android:onClick="change"
        android:background="@drawable/brt_shape"
        android:backgroundTint="#FF5722"
        android:layout_below="@+id/braingame"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="47dp" />

    <Button
        android:text="About"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/About"
        android:background="@drawable/brt_shape"
        android:layout_below="@+id/NewGame"
       android:backgroundTint="#ffff"
        android:onClick="about" />

</RelativeLayout>